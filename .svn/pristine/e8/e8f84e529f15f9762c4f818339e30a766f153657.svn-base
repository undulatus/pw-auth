#database properties
spring.datasource.url=jdbc:mysql://localhost:3306/pw_auth?autoReconnect=true&useSSL=false
spring.datasource.username=root
spring.datasource.password=password
spring.jpa.generate-ddl=true

#logging properties
logging.level.org.springframework.web=ERROR
logging.level.com.pointwest.authentication=DEBUG
# Logging pattern for the console
logging.pattern.console= "%d{yyyy-MM-dd HH:mm:ss} - %msg%n"
# Logging pattern for file
logging.pattern.file= "%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"
logging.file=usr/PointwestAuthentication/logs.log

server.contextPath=/pw-auth
#remove to prod
server.port=8081
